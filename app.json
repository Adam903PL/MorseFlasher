{
  "expo": {
    "name": "MorseFlasher",
    "slug": "morse-flasher",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/images/icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#1a1a1a"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Ta aplikacja potrzebuje dostępu do kamery, aby móc kontrolować latarkę do nadawania sygnałów Morse'a.",
        "NSMicrophoneUsageDescription": "Ta aplikacja nie używa mikrofonu, ale jest wymagane przez expo-camera."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/icon.png",
        "backgroundColor": "#1a1a1a"
      },
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.FLASHLIGHT",
        "android.permission.RECORD_AUDIO",
        "android.permission.READ_SENSORS"
    
      ],
      "package": "com.adam903pl.morseflasher"
    },
    "web": {
      "favicon": "./assets/images/icon.png"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Aplikacja używa kamery do kontroli latarki w celu nadawania sygnałów Morse'a."
        }
      ]
    ]
  }
}
